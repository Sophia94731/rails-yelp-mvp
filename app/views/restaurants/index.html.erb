<div>
  <h1 class="text-center m-3">Restaurant's List:</h1>
  <ul class="list-group">
      <% @restaurants.each do |restaurant| %>
      <li class="list-group-item m-3">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %>
      <% end %>
    </li>
  </ul>

  <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary"%>

</div>
